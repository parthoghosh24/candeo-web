<%= javascript_include_tag 'content', 'data-turbolinks-track' => true %>
              <%if @content['media_type']==0%>
                  <% content_for :title, "Written Performance-#{@content['title']}" %>
              <%end%>
              <%if @content['media_type']==1%>
                    <% content_for :title, "Audio Performance-#{@content['title']}" %>
              <%end%>
              <%if @content['media_type']==2%>
                    <% content_for :title, "Video Performance-#{@content['title']}" %>
              <%end%>
              <%if @content['media_type']==3%>
                  <% content_for :title, "Image Performance-#{@content['title']}" %>
              <%end%>

<% content_for :head do %>
  <meta property="og:type"   content="website" />
  <meta property="og:url"    content="<%= "#{DATABASE_CONF['base_url']}/c/#{@content['short_id']}" %>" />

   <%if @content['media_type']==0%>
        <meta property="og:title"  content="Written Performance - <%=@content['title']%>" />
        <meta name="twitter:title" content="Written Performance - <%=@content['title']%>">
    <%end%>
    <%if @content['media_type']==1%>
          <meta property="og:title"  content="Audio Performance - <%=@content['title']%>" />
          <meta name="twitter:title" content="Audio Performance - <%=@content['title']%>"/>
    <%end%>
    <%if @content['media_type']==2%>
          <meta property="og:title"  content="Video Performance - <%=@content['title']%>" />
          <meta name="twitter:title" content="Video Performance - <%=@content['title']%>"/>
    <%end%>
    <%if @content['media_type']==3%>
        <meta property="og:title"  content="Image Performance - <%=@content['title']%>" />
        <meta name="twitter:title" content="Image Performance - <%=@content['title']%>"/>
    <%end%>

  <meta property="og:image"  content="<%=@content['bg_url']%>" />
  <%if !@content['description'].blank?%>
      <meta property="og:description"  content="<%=@content['description']%>" />
      <meta name="twitter:description" content="<%=@content['description']%>">
  <%else%>
      <meta property="og:description"  content="Candeo is a social network focused around talent discovery and nurturing. It behaves like a persistent online talent show where you can perform every week, voted and get ranked at the end of the week. Plus you can promote and discover new talent also and grow your network." />
      <meta name="twitter:description" content="Candeo is a social network focused around talent discovery and nurturing. It behaves like a persistent online talent show where you can perform every week, voted and get ranked at the end of the week. Plus you can promote and discover new talent also and grow your network.">
  <%end%>

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@candeo2015">
    <meta name="twitter:creator" content="@candeo2015">


    <meta name="twitter:image" content="<%=@content['bg_url']%>">

<% end %>
<input type="hidden" id="content_id" name="content_id" value="<%=@content['short_id']%>">
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">

    <p class="page-title text-center"><a href="/" class="page-logo-size">Candeo</a></p>

  </div>
</nav>

<div class="container margin-top-100 home-content">
  <div class="row">
      <div class="content-holder">
          <article class="white-panel">
          <div class="col-sm-7 margin-bottom-10">
              <%if @content['media_type']==0%>
                  <img  src="<%=@content['bg_url']%>" alt="">
              <%end%>
              <%if @content['media_type']==1%>
                    <img src="<%=@content['bg_url']%>" alt="">
                    <p><audio controls><source src="<%=@content['media_url']%>" type="audio/mpeg">Your browser does not support the audio element.</audio></p>
              <%end%>
              <%if @content['media_type']==2%>
                    <video class="video-dimen" loop="true" controls><source src="<%=@content['media_url']%>" type="video/mp4">Your browser does not support the video element.</video>
              <%end%>
              <%if @content['media_type']==3%>
                  <img src="<%=@content['media_url']%>" alt="">
              <%end%>
          </div>
          <div class="col-sm-5">
              <div class="row">
                  <div class="col-xs-6">
                      <p><a href="/u/<%=@content["web_user_name"]%>"><img src="<%=@content['user_avatar_url']%>" alt="<%=@content['user_name']%>" class="img-circle profile-img-small"></a></p>
                      <p><%=@content['user_name']%></p>
                  </div>
                  <div class="col-xs-6 text-right">
                      <p class="margin-bottom-25">
                        <%if @content['media_type']==0%>
                                <i class="fa fa-pencil content-icon-font"></i>
                        <%end%>
                        <%if @content['media_type']==1%>
                              <i class="fa fa-music content-icon-font"></i>
                        <%end%>
                        <%if @content['media_type']==2%>
                              <i class="fa fa-film content-icon-font"></i>
                        <%end%>
                        <%if @content['media_type']==3%>
                            <i class="fa fa-camera content-icon-font"></i>
                        <%end%>
                      </p>
                      <p><span class="time-ago"><%=time_ago_in_words(@content["created_at"].to_time)%> ago </span></p>
                  </div>
              </div>

              <div class="row">
                 <div class="col-xs-12">
                    <h3><%=@content['title']%></h3>
                    <p class="time-ago"><%=@content['description']%></p>
                 </div>
              </div>

              <div class="row margin-top-50">

                  <div class="col-xs-12">
                      <div class="col-xs-3">
                     <div class="row">
                        <a class="cta-a" href="https://play.google.com/store/apps/details?id=com.candeo.app"><span class="applause-icon icon-font"></span></a>
                     </div>
                     <div class="row">
                        <a class="cta-a" href="https://play.google.com/store/apps/details?id=com.candeo.app"><%=@content['appreciate_count']%></a>
                     </div>
                  </div>
                  <div class="col-xs-3">
                      <div class="row">
                          <a class="cta-a" href="https://play.google.com/store/apps/details?id=com.candeo.app"><i class="fa fa-thumbs-o-down thumb-down-font"></i></a>
                      </div>
                      <div class="row margin-top-10">
                          <a class="cta-a" href="https://play.google.com/store/apps/details?id=com.candeo.app"><span><%=@content['skip_count']%></span></a>
                      </div>
                  </div>
                  <div class="col-xs-3">
                      <div class="row margin-top-inv-10">
                           <a class="cta-a" href="https://play.google.com/store/apps/details?id=com.candeo.app"><span class="icon-cloud-sun-inv icon-font"></span></a>
                      </div>
                      <div class="row margin-top-10">
                          <a class="cta-a" href="https://play.google.com/store/apps/details?id=com.candeo.app"><%=@content['inspired_count']%></a>
                      </div>
                  </div>
                  <div class="col-xs-3">
                      <div class="row">
                           <a class="cta-a" href="https://play.google.com/store/apps/details?id=com.candeo.app"><i class="fa fa-download thumb-down-font"></i></a>
                      </div>
                      <div class="row">
                      </div>
                  </div>
                  </div>

              </div>

          </div>
      </article>
      </div>
  </div>
</div>
<footer class="text-center">
      <span>&#169; Candeo, 2015</span>
</footer>
